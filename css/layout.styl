h1
	font-size 26px
	color deep-grey
	line-height 44px
	margin-top -4px
h2
	font-size 20px
	color deep-grey
	line-height 40px
h3
	font-size large
	color deep-grey
	line-height 36px

a
	color deep-grey
	font-size small
	font-weight	bold
	text-decoration none
	transition .25s
a:hover
	color org

ul, li
