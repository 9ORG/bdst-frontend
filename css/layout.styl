@import '../lib/animate.css'
@import '../lib/nib'

org = #fcb03c
deep-org = #ff9900
blu = #77bfdf
bro = #ba8879

body-width = 1080px

border-grey = #eaeaea
light-grey = #bababa
grey = #666
deep-grey = #333

extra-small = 12px
small = 13px
medium = 14px
large = 16px

*
	margin 0
	padding 0

body, p
	font-family "微软雅黑", "Microsoft Yahei", "黑体", "Arial", "Hei", sans-serif
	color grey
	font-size small

p
	margin-top 10px
h1
	font-size 26px
	color deep-grey
	line-height 44px
	margin-top -4px
h2
	font-size 20px
	color deep-grey
	line-height 40px
h3
	font-size 17px
	color deep-grey
	line-height 36px

// body
// 	background-color #000

a
	color deep-grey
	font-size small
	text-decoration none
	transition .25s
a:hover
	color org

ul, li
	margin 0
	padding 0
	list-style none	

.clear
	clear both
.current
	color org
.current-button
	color org
.inline
	display	inline
	margin-right 10px
	float left
.block
	display block
.overflow-scroll
	overflow scroll
.border-right
	border-width 0 4px 0 0
	border-style solid
	border-color org
.hr
	height 1px
	background-color border-grey
	margin 5px 0 20px 0
	clear both
.hidden
	display none
.button
	width 140px
	height 34px
	font-size medium
	color #fff
	line-height 20px
	margin 20px 10px 0 0
	padding 5px
	border 1px solid blu
	border-radius 5px
	background-color blu
	float left
	&:hover
		border-color org
		background-color org

#body-container
	width body-width
	min-height 460px
	margin-top 120px
	margin-left auto
	margin-right auto

.main-content-full
	width body-width
	margin 160px auto 140px auto

#sidebar
	position fixed
	top 165px
	margin-right 20px
	float left
	ul#side-menu
		width 100px
		& > li
			font-size 12px
			color light-grey
			margin-bottom 20px
			text-align center
			font-weight bold
			ul.side-menu-button
				& > li
					margin-top 5px
					& > a
						font-size small
						font-weight bold
	#popup-user-list-custom
		position fixed
		top 160px
		margin-left 100px
		.tri-pointer
			width 4px
			height 7px
			float left
			margin-left -4px
			margin-top 6px
		& li
			width 70px
			border-style solid
			border-color #000
			border-width 0
			padding 8px 8px 0 8px
			text-align center
			background-color deep-grey
			&:first-child
				border-top-left-radius 4px
				border-top-right-radius 4px
				padding-top 8px
			&:last-child
				// border-width 1px
				border-bottom-left-radius 4px
				border-bottom-right-radius 4px
				padding-bottom 11px
			& > a
				color #fff
				font-size 12px
				font-weight bold
				&.current
					color org
				&:hover
					color org

.main-content
	width 920px
	margin 10px 0 100px 160px
	float left
	.column-1-1
		width 920px
		float left
	.column-2-1
		width 435px
		float left
	.column-3-2
		width 580px
		float left
	.column-3-1
		width 290px
		float left
	.column-span
		margin-right 50px

.main-content-full
	.club-list-box li
		margin 20px 17px 20px 17px
		display inline
		float left
		&:hover
			.club-avatar-large
				border-color org
			.club-list-name a
				color org
	.activity-list-box li
		margin 2px 2px 2px 2px
		display inline
		float left
		&:hover
			.activity-list-name
				color org
				// background-color rgba(0,0,0,.8)
				background-color rgba(255,255,255,1)
			.activity-avatar-cover
				background-color rgba(0,0,0,.05)
	.box-content
		.club-avatar-large
			width 154px
			height 154px
			border 1px solid border-grey
			border-radius 100%
			transition .25s
			margin 0 13px 0 13px
			overflow hidden
			& > img
				width 154px
				height 154px
		.club-list-name
			width 182px
			height 13px
			line-height 13px
			text-align center
			font-weight bold
			margin 20px 0 0px 0
		.activity-avatar-large
			width 266px
			height 195px
			overflow hidden
			& > img
				width 266px
				float left
				z-index -1000
		.activity-list-name
			width 246px
			height 40px
			margin-top -40px
			padding 0 10px 0 10px
			font-size medium
			line-height 40px
			text-align center
			color deep-grey
			font-weight bold
			background-color rgba(255,255,255,.8)
			transition .25s
			float left
			z-index 1000

.main-content
	.user-club-list-box
	.user-activity-list-box
	.admin-user-list-box
	.admin-activity-list-box
		& li:hover
			.club-avatar
			.activity-avatar
			.user-avatar
				border-color org

.main-content
.main-content-full
	.tiny-menu-bar
		float right
		& > a
			float left
			color blu
			font-size extra-small
			// margin-right 10px
			margin-left 10px
			margin-top 15px
			&:first-child
				margin-left 5px
	.tiny-description-bar
		color light-grey
		margin-right 10px
		margin-top 14px
		margin-left 5px
		float left
	.message-card
		color light-grey
		margin-top 10px
		&:first-child
			padding-top 10px
	.description-card
		color light-grey
		margin-top 10px
		padding-top 10px
	.box-content
		margin 20px 0 10px 0
		.club-avatar,
		.activity-avatar
		.user-avatar
			width 70px
			height 70px
			border 1px solid border-grey
			border-radius 100%
			transition .25s
			margin 10px 20px 0 0
			overflow hidden
			float left
			& > img
				width 70px
				height 70px
		.info-name
			width 60px
			height 30px
			line-height 30px
			margin 20px 10px 0 0
			float left
		.info-tips
			width 260px
			height 30px
			line-height 30px
			font-size extra-small
			color bro
			margin 20px 10px 0 0
			float left
		.info-check-red
			border-color #ee0000
		.info-check-green
			border-color #00bb00
		#user-avatar-large
		#club-avatar-large
			width 200px
			height 200px
			border 1px solid border-grey
			margin 10px 20px 0 0px
	.plain-button
		height 30px
		font-size extra-small
		color blu
		line-height 30px
		margin 20px 10px 0 0
		float left
	input
		height 20px
		line-height 20px
		color grey
		margin 20px 20px 0 0
		padding 5px 8px 5px 8px
		border 1px solid border-grey
		font-size 12px
		float left
		&[type="radio"]
			width extra-small
			margin: 25px 10px 0 0
		&[type="checkbox"]
			margin: 25px 10px 0 0
		&[type="button"]
			width 140px
			height 34px
			font-size medium
			color #fff
			transition .25s
			line-height 20px
			margin 40px 10px 0 0
			padding 5px 8px 5px 8px
			border 1px solid blu
			border-radius 5px
			background-color blu
			float left
			&:hover
				border-color org
				background-color org
				cursor pointer
	select
		margin 26px 20px 0 0
		float left
	textarea
		width 450px
		height 120px
		ling-height 20px
		color grey
		margin 20px 20px 0 0
		padding 9px 8px 9px 8px
		border 1px solid border-grey
		font-size 12px
		float left
	.short
		width 80px
	.normal
		width 168px
	.long
		width 450px
	table
		min-width 100%
		margin-top 10px
		border-collapse separate
		border-spacing 0
		overflow scoll
		thead
			tr:first-child
				th:first-child
					border-top-left-radius 4px
				th:last-child
					border-top-right-radius 4px
					border-right-width 1px
		tbody
			tr
				transition .25s
				&:hover
					background-color #f9f9f9
				&.font-color-grey
					color light-grey
				td:last-child
					border-right-width 1px
			tr:last-child
				td
					border-bottom-width 1px
				td:first-child
					border-bottom-left-radius 4px
				td:last-child
					border-bottom-right-radius 4px
		td
			text-align center
			&.align-left
				text-align left
		th
			// color org
			background-color #f9f9f9
			font-weight bold
		th, td
			height 20px
			line-height 20px
			border-style solid
			border-color border-grey
			border-width 1px 0 0 1px
			padding 8px
			&.w30
				min-width 28px
				width 28px
			&.w60
				min-width 60px
				width 60px
			&.w100
				min-width 100px
				width 100px
			&.w140
				min-width 140px
				width 140px
			&.w220
				min-width 220px
				width 220px
			&.m200
				min-width 220px
			input[type="checkbox"]
				margin 0 8px 0 8px
			a
				color blu
				font-size extra-small
				margin-right 10px
				&:last-child
					margin-right 0px
	.batch-menu-bar
		margin-top 5px
		float left
		& > a
			color blu
			font-size extra-small
			margin-right 10px
			float left
			&:first-child
				margin-left 0px
	.page-bar
		margin-top 5px
		float right
		& > a
			color blu
			font-size extra-small
			margin-left 10px
			float left
		& > span
			color light-grey
			font-size extra-small
			margin-left 10px
			float left

header
	width 100%
	height 80px
	overflow visible
	position fixed
	top 0
	z-index 9
	#top-line
		width 100%
		height 5px
		background-color #000
		position fixed
		top 0
	#top-bar
		background-color rgba(255,255,255,.85)
		box-shadow 0 1px 3px 0 rgba(51,51,51,.15)
		#top-bar-content-container
			width body-width
			height 80px
			margin-left auto
			margin-right auto
			#top-logo
				float left
			#top-logo-text
				margin 10px 0px 10px 20px
				line-height 60px
				font-size 26px
				float left
				color org
			#top-admin-name
				& > a
					margin 10px 0px 10px 20px
					padding-top 2px
					line-height 60px
					font-size 20px
					float left
					color deep-grey
					font-weight bold
				#change-admin > a
					margin-top 38px
					float left
					font-size 12px
					font-weight bold
					margin-left 6px
			ul#top-nav
				& > li
					margin-left 20px
					padding-top 5px
					display inline-block
					float left
					& > a
						font-size 14px
						line-height 80px
						font-weight bold
			#top-user-menu
				width 80px
				padding-top 5px
				font-size medium
				float right
				#username
					line-height 80px
					float right
					font-size 14px
					color org
					font-weight bold
					cursor pointer
				ul#popup-user-menu
					& > li
						margin-right 10px
						display inline-block
						float right
						&:first-child
							margin-right 20px
						& > a
							font-size small
							font-weight bold
							line-height 80px

footer
	#foot-bar
		width 100%
		height 200px
		background-color deep-grey
		margin-top 60px
		#foot-bar-content-container
			width body-width
			margin-left auto
			margin-right auto
			.footer-decro
				float right
				& > img
					position relative
					top -40px
			.foot-bar-info
				width 140px
				margin-right 20px
				float left
				.foot-bar-title
					font-size medium
					color org
					font-weight bold
				li.foot-bar-content
					margin-top 5px
					& > a
						color rgba(255,255,255,.4)
						&:hover
							color #fff
			.foot-bar-info-right
				width 300px
				float right
				.foot-bar-title
					font-size medium
					color org
				li.foot-bar-content
					margin-top -5px
					& > p
						color rgba(255,255,255,.4)
						& > a:hover
							color #fff
