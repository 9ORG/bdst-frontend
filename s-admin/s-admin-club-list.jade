							.batch-menu-bar
								a 全部选中
								a.popup-stage-delete-club 批量删除社团
							.page-bar
								a.current-page 1
								a 2
								a 3
								span ...
								a 10
								span /
								a 显示全部
							.clear
					.clear
			.clear

		#popup-stage-delete-club.popup-stage.hidden
			#delete-club-box.popup-stage-box.xsmall
				.box-content
					.description-content
						| 确定删除社团吗？
						span 删除后不可恢复
					.button-box
						button#submit-delete-club 确定删除
						button.cancel-stage 取消
					.clear

		#popup-stage-search.popup-stage.hidden
			#search-box.popup-stage-box.small
				.box-content
					.info-name 关键词
					input(type="text", name="keyword")
					button#submit-search 搜索
					button.cancel-stage 取消
					.clear

